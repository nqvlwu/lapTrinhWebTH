@model IEnumerable<lapTrinhWebTH.Models.Category>
<style>
    #div-u {
        padding-top: 30px;
        margin-top: 20px;
        background-color: cornflowerblue;
        text-decoration: none;
    }

    .div-cate {
        height: 30px;
        width: 100%;
    }

        .div-cate a {
            color: yellow;
            text-decoration: none;
            font-size: large;
        }

            .div-cate a:hover {
                color: chartreuse;
                text-decoration: none;
            }
</style>
<br />
<h3 style="color:darkred; text-align:center;">Danh mục sản phẩm</h3>
<ul style="list-style-type: none;" id="div-u">
    @{
        foreach (var item in Model)
        {
            <li class="div-cate">
                @Html.ActionLink(item.CategoryName, "ProductList", "Products", new
                {
                    category= item.CategoryID
                }, "")
            </li>
        }
    }
</ul>
